<%= form_for [@comment, @reply], remote: true do |f| %>
  <%= f.text_field :content, placeholder: t(".add") %><br/>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :parent_id, value: params[:comment_id] %>
  <%= f.hidden_field :vehicle_id, value: params[:vehicle_id] %>
<% end %>
